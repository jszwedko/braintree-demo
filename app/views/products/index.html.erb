<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= link_to 'Buy (Drop In)', buy_drop_in_product_path(product) %></td>
        <td><%= link_to 'Buy (Transparent Redirect)', buy_transparent_redirect_product_path(product) %></td>
        <td><%= link_to 'Buy (Server to server)', buy_server_to_server_product_path(product) %></td>
        <td><%= link_to 'Buy (Encrypted)', buy_encrypted_product_path(product) %></td>
        <td><%= link_to 'Buy (Tokenized)', buy_tokenized_product_path(product) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
